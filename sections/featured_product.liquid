
{% assign product = all_products["barcode-two-pack"]%}
<div class="product_featured pt-5" id="product_featured">
    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col-12">
                <h4>SHOP BARCODE</h4>
            </div>
        </div>    
        <div class="row">
            <div class="col-12 col-md-5 pe-md-5 pt-5">
                <div class="col-12 position-relative">
                    <center>
                        <span class="text-center position-absolute top-0 start-100 translate-middle p-2 bg-danger border border-light rounded-circle sale_badge">
                            20%<br>OFF
                    </span>
                        <img src="{{product.featured_image | img_url: 'large'}}" class="w-75 product_image" alt="">
                    </center>
                </div>
                <hr>
                <div class="col-12">
                    <p>12 BOTTLES PER PACK</p>
                    <p>VEGAN * SOY-FREE * GLUTEN-FREE * LOW SUGAR</p><br>
                    <p>SEE NUTRITION FACTS</p>
                </div>
                <hr>
            </div>
            <div class="col-12 col-md-7 ps-md-5 pt-5">

        
            {% form "product", product %}
            
                <h4>{{ product.title }}</h4>
                <p>FUNCTIONAL PERFORMANCE BEVERAGES</p>
                <hr class="mt-3 mb-3">
                <h4>*****</h4>
                <hr class="mt-3 mb-3">
                <p class="mt-3 pt-3">{{ product.description }}</p>
                <p class="mt-5 mb-5">SELECT YOUR TWO PACK</p>

                <div class="row">
                    {% assign variant_col_classes = "col-md-5,col-md-3,col-md-4" | split: "," %}
                    {% for variant in product.variants%}
                        {% assign class_index = forloop.index | minus: 1 %}
                        <!-- TODO: counter for index -->
                        <div class="col-12 {{ variant_col_classes[class_index] }}">
                            <div class="form-check form-check-inline mt-2 position-relative w-100">
                                {% if class_index == 0 %}
                                    {% if variant.available and variant.inventory_policy == 'deny' %}
                                        <span class="text-center position-absolute top-0 start-100 translate-middle p-2 bg-danger border border-light rounded-circle best_seller_badge">
                                            Best<br>Seller
                                        </span>
                                        <input class="form-check-input" type="radio" name="id" id="{{variant.id}}" value="{{variant.id}}" checked>
                                        <label class="form-check-label p-2 variant_option w-100 variant_label" for="{{variant.id}}" data-src='{{variant | img_url: '720x720'}}' >{{variant.title}}</label>
                                    {% else %}
                                            <span class="text-center position-absolute top-0 start-100 translate-middle p-2 bg-danger border border-light rounded-circle best_seller_badge">
                                                Best<br>Seller
                                            </span>
                                            <input class="form-check-input" type="radio" name="id" id="{{variant.id}}" value="{{variant.id}}" disabled="true">
                                            <label class="form-check-label p-2 variant_option w-100 variant_label" for="{{variant.id}}" data-src='{{variant | img_url: '720x720'}}' disabled="true">{{variant.title}}</label>
                                    {% endif %}
                                {% else %}
                                    {% if variant.available and variant.inventory_policy == 'deny' %}
                                        <input class="form-check-input" type="radio" name="id" id="{{variant.id}}" value="{{variant.id}}" checked >
                                        <label class="form-check-label p-2 variant_option w-100 variant_label" for="{{variant.id}}" data-src='{{variant | img_url: '720x720'}}'>{{variant.title}}</label>
                                    {% else %}
                                        <input class="form-check-input" type="radio" name="id" id="{{variant.id}}" value="{{variant.id}}" disabled="true">
                                        <label class="form-check-label p-2 variant_option w-100 variant_label" for="{{variant.id}}" data-src='{{variant | img_url: '720x720'}}' disabled="true">{{variant.title}}</label>
                                    {% endif %}
                                {% endif %}
                                
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="row">
                    <div class="col-12 mt-5 mb-5">
                        <h3><del class="text-muted">{{product.compare_at_price_max | money_with_currency}}</del> {{product.price | money_with_currency}} + FREE Shipping</h3>
                    </div>
                    <div class="col-12">
                        <button class=" btn btn-dark w-100 p-2" type="submit">SAVE 20% AND CHECKOUT NOW</button>
                    </div>
                </div>

            {% endform %}


            </div>

            </div>
        </div>
    </div>
